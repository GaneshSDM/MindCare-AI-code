# path: mindcare-backend/.env.example
# Database configuration
DB_BACKEND=duckdb  # duckdb or sqlite
DB_PATH=./models/mindcare.duckdb  # or ./models/mindcare.sqlite

# Ollama configuration
OLLAMA_MODEL=mistral
OLLAMA_HOST=http://localhost:11434

# Embedding model configuration
EMBED_MODEL_PATH=  # Path to local sentence-transformers model, leave empty for TF-IDF fallback
VECTOR_DB=faiss  # faiss or chroma

# PII masking
PII_SALT=mindcare_salt_2023

# Logging
LOG_LEVEL=INFO

# Paths
DATA_DIR=./data
MODELS_DIR=./models
VECTOR_INDEX_DIR=./models/vector_index
ARTIFACTS_DIR=./models/artifacts